<%= form_for(@country) do |f| %>
  <% if @country.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@country.errors.count, "error") %> prohibited this country from being saved:</h2>

      <ul>
      <% @country.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </div>  

  <div class="field">
    <%= fields_for :visited do |visited| %>
      <%= visited.label :country_id, 'Visited' do %>
        <%= visited.check_box :country_id, {}, @country.code %>
      <% end %>
    <% end %>
  </div>  
  <%= hidden_field_tag :user_id, current_user.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
